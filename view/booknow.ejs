<%- include('./partial/head'); -%>
    <%- include('./partial/nav'); -%>
<div style="height:50px;"></div>
    <main id="main" class="main-page">
    <section class="why-us section-bg" data-aos="fade-up" date-aos-delay="200" >
      <div class="container-fluide">
        <div class="row">
          <div class="col-lg-12 video-box" style="background: rgba( 255, 255, 255, 0.25 );box-shadow: 0 8px 32px 0 rgba( 31, 38, 135, 0.37 );backdrop-filter: blur( 4px );-webkit-backdrop-filter: blur( 4px ); border-radius: 10px;border: 1px solid rgba( 255, 255, 255, 0.18 );">
            <section id="speakers-details">
              <div class="container">
                <div class="section-header">
                  <div class="hotel-card">
                    
                </div>
                  <h2>Book Now</h2>
                  <p>SKY DOOR HOTELS & RESORTS</p>
                 
                  <div class="row">
                    <div class="col-6">
                      <form action="" method="post" id="formdata" onsubmit="return false">
                        <div class="form-group">
                          <label>Name</label>
                          <input type="text" class="form-control" name="name" value="<%=user.name%>">
                        </div>
                        <div class="form-group">
                          <label>Email</label>
                          <input type="text" class="form-control" name="email"  value="<%=user.email%>">
                        </div>
                        <div class="form-group">
                          <label>Mobile</label>
                          <input type="text" class="form-control" name="mobile"  value="<%=user.phone%>">
                        </div>
                        <div class="form-group">
                          <label>Country</label>
                          <input type="text" class="form-control" name="country">
                        </div>
                        <div class="form-group">
                          <label>address</label>
                          <input type="text" class="form-control" name="address">
                        </div>
                        <div class="form-group">
                          <label>city</label>
                          <input type="text" class="form-control" name="city">
                        </div>
                        <div class="form-group">
                          <label>Additional Details and Preferences</label>
                          <textarea class="form-control" name="additional"></textarea>
                        </div>
                        <div class="form-group">
                          <label>GST Details (optional)</label>
                          <textarea class="form-control" name="additional"></textarea>
                        </div><br>
                        <div class="form-group">
                          <label><span><input type="checkbox" name="breakfast" style="width: 15px; height: 15px;" class="form-check-input" id="breakfast"></span> <span>Add breakfast (<%=hotels.breakfast%>)</span></label>
                        </div><br>
                        <div class="form-group">
                          <label><span><input type="checkbox" name="dinner" style="width: 15px; height: 15px;" class="form-check-input" id="dinner"></span> <span>Add dinner (<%=hotels.dinner%>)</span></label>
                        </div><br><br>
                        <div><button class="btn btn-primary">Save changes</button></div>
                        <!-- <div class="form-group">
                          <input type="submit" class="btn btn-success" value="Complete Booking" id="rzp-button1">
                        </div> -->
                      </form>
                    </div>
                    <div class="col-6">
                      <div class="card">
                        <h4>Your Stay</h4>
                        <div class="row">
                        <div class="col-6">
                          <p>Check-in<br>After 2:00 PM</p>
                        </div>
                        <div class="col-6">
                          <p>Check-out<br>Before 12:00 PM</p>
                        </div>
                        <div class="col-12">
                          <hr>
                        </div>
                        <div class="co-12">
                          <p style="text-align: justify;">check in out date come here ,
                            <br>
                           3 Adult<br>
                            4 Children<br>
                          </p>
                        </div>
                        <div class="col-6">
                          <p style="text-align: justify;"><%=hotels.room_type%>room<br>
                          Best Available Rate Room Only</p>
                        </div>
                        <div class="col-6">
                        <p>₹<%=hotels.price%><br>
                          1 Night</p>
                        </div>
                        <div class="col-6">
                          <p style="text-align: justify;">Sub Total</p>
                        </div>
                        <div class="col-6">
                        <p>₹<span id="sub_total"></span><br></p>
                        </div>
                        <% if(rebo.coupon == "SKY10"){ %>
                          <div class="col-6">
                            <p style="text-align: justify;">Coupon (<%=rebo.coupon%>)</p>
                          </div>
                          <div class="col-6">
                          <p>-₹<span id="coupon"></span><br></p>
                          </div>
                          <% } %>
                        <div class="col-6">
                          <p style="text-align: justify;">Taxes and Fees</p>
                        </div>
                        <div class="col-6">
                        <p>₹<span id="gst"></span><br></p>
                        </div>
                        <div class="col-6">
                          <p style="text-align: justify;">Total</p>
                        </div>
                        <div class="col-6">
                        <p>₹<span id="totalamt"></span><br>
                          (INR tax included )</p>
                        </div>
                        </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>
    </section>
    </main>
  <!-- ======= Footer ======= -->
  <%- include('foot'); -%>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<button id="rzp-button1">Pay</button>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
